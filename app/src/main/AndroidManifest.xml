<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zcp.wanAndroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.zcp.wanAndroid.WanAndroidApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">
        <meta-data
            android:name="android.max_aspect"
            android:value="2.9" />

        <activity
            android:name="com.zcp.wanAndroid.ui.splash.SplashActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zcp.wanAndroid.ui.home.HomeActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name="com.zcp.wanAndroid.ui.sign.SignInOrSignUpActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:launchMode="singleTask" />

    </application>

</manifest>